{
  "compilerOptions": {
    "incremental": true,
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.node.tsbuildinfo",
    "target": "esnext",
    "lib": ["ESNext"],
    "module": "NodeNext",
    "allowImportingTsExtensions": true,

    /* Output Configuration */
    "outDir": "./build",
    "rootDir": "./src",

    /* Bundler mode */
    "moduleResolution": "nodenext",
    "noEmit": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true
  },
  "include": ["src/**/*"]
}
